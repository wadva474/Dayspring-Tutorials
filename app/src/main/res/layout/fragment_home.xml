<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:gravity="center"
        android:padding="10dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="2dp"
            android:padding="10dp"
            android:gravity="center"
            android:id="@+id/part_one_courses"
            android:layout_width="200dp"
            android:backgroundTint="@android:color/transparent"
            android:foreground="@drawable/wire_button"
            android:background="@drawable/wire_button"
            android:outlineSpotShadowColor="@color/secondaryText"
            android:text="Part 1 Courses"
            android:textStyle="bold"
            android:shadowColor="@color/secondaryText"
            android:layout_height="wrap_content"/>

        <TextView
            android:padding="10dp"
            android:layout_margin="2dp"
            android:gravity="center"
            android:id="@+id/part_two_courses"
            android:layout_width="200dp"
            android:backgroundTint="@android:color/transparent"
            android:foreground="@drawable/wire_button"
            android:background="@drawable/wire_button"
            android:outlineSpotShadowColor="@color/secondaryText"
            android:text="Part 2 Courses"
            android:shadowColor="@color/secondaryText"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

        <TextView
            android:padding="10dp"
            android:layout_margin="2dp"
            android:gravity="center"
            android:id="@+id/part_three_courses"
            android:layout_width="200dp"
            android:backgroundTint="@android:color/transparent"
            android:foreground="@drawable/wire_button"
            android:background="@drawable/wire_button"
            android:outlineSpotShadowColor="@color/secondaryText"
            android:text="Part 3 Courses"
            android:shadowColor="@color/secondaryText"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</RelativeLayout>